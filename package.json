{
  "name": "minute-debug",
  "publisher": "minuteos",
  "displayName": "minuteDebug",
  "description": "GDB-based debug adapter for microcontrollers",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/minuteos/vs-debugger"
  },
  "author": "triaxis",
  "license": "MIT",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:minute-debug"
  ],
  "keywords": [
    "minuteos",
    "gdb",
    "debug",
    "mcu",
    "microcontroller",
    "embedded"
  ],
  "contributes": {
    "configuration": {
      "title": "minuteDebug",
      "properties": {
        "minuteDebug.trace": {
          "type": "array",
          "description": "Enable trace output for various components",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "breakpoints": [
      {
        "language": "c"
      },
      {
        "language": "cpp"
      }
    ],
    "debuggers": [
      {
        "label": "minuteDebug",
        "type": "minute-debug",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program",
              "server"
            ],
            "properties": {
              "program": {
                "type": "string"
              },
              "server": {
                "type": "string",
                "enum": [
                  "qemu",
                  "bmp"
                ]
              }
            }
          },
          "attach": {
            "required": [
              "program",
              "server"
            ],
            "properties": {
              "program": {
                "type": "string"
              },
              "server": {
                "type": "string",
                "enum": [
                  "qemu",
                  "bmp"
                ]
              }
            }
          }
        },
        "languages": [
          "c",
          "cpp"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.mjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.mjs --production --packages",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "prepare": "husky",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "lint-staged": {
    "*.{js,mjs,ts}": "eslint"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.13.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "async-sema": "^3.1.1",
    "disposablestack": "^1.1.7",
    "esbuild": "^0.24.2",
    "eslint-plugin-jsdoc": "^50.6.2",
    "eslint-plugin-perfectionist": "^4.7.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "serialport": "^13.0.0",
    "usb": "^2.14.0"
  }
}
